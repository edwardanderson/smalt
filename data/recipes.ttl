    schema:isPartOf <https://id.rijksmuseum.nl/301254483> ;
    schema:keywords <http://vocab.getty.edu/aat/300012866>,
        <http://vocab.getty.edu/aat/300013173>,
        <http://vocab.getty.edu/aat/300013293>,
        <http://vocab.getty.edu/aat/300013754>,
        <http://vocab.getty.edu/aat/300014254>,
        <http://vocab.getty.edu/aat/300053797>,
        <http://vocab.getty.edu/aat/300053825>,
        <http://vocab.getty.edu/aat/300128438> ;
